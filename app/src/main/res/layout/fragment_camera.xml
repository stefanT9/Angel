<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CameraFragment"
        android:orientation="vertical">
    <Button
            android:id="@+id/enterQr_button_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/scanQr_button_camera"
            android:text="enter Qr by hand"
    />
    <Button
            android:id="@+id/scanQr_button_camera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/camera_cameraView_camera"
            android:text="scan"
    />
    <io.fotoapparat.view.CameraView
            android:id="@+id/camera_cameraView_camera"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            app:layout_constraintTop_toTopOf="parent"
    />


</RelativeLayout>